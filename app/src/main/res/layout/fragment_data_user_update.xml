<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Users.dataUserUpdate" >

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="275dp" />

    <TextView
        android:id="@+id/tv_biography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biography"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/tv_Registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="139dp" />

    <TextView
        android:id="@+id/tv_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Images"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="528dp" />

    <CalendarView
        android:id="@+id/ed_birthdate"
        android:layout_width="267dp"
        android:layout_height="274dp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="254dp" />

    <EditText
        android:id="@+id/ed_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="139dp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="67dp" />

    <EditText
        android:id="@+id/ed_biography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="200dp" />

    <ImageView
        android:id="@+id/firebase"
        android:layout_width="95dp"
        android:layout_height="78dp"
        android:layout_marginVertical="30dp"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="580dp" />

    <Button
        android:id="@+id/img"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:text="Select Image"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="547dp" />

    <Button
        android:id="@+id/bt_updateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create User"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="679dp" />


</androidx.constraintlayout.widget.ConstraintLayout>